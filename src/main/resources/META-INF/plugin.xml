<idea-plugin url="https://github.com/LNSD/pyinvoke-idea">
    <id>es.lnsd.pyinvoke-idea</id>
    <name>Invoke</name>
    <vendor email="lorenzo.delgado@lnsd.es" url="http://www.lnsd.es">LNSD</vendor>

    <description><![CDATA[
    <a href="http://www.pyinvoke.org/">Invoke</a><br>
    <i>Pythonic task execution</i><br><br>
    Invoke is a Python (2.7 and 3.4+) task execution es.lnsd.invoke.ui & library, drawing inspiration from
    various sources to arrive at a powerful & clean feature set.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <!-- Depend on the Python plugin. Also works in the different editions of PyCharm. -->
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow id="Invoke" anchor="left" icon="/es/lnsd/invoke/retweet.svg"
                    factoryClass="es.lnsd.invoke.ui.toolwindow.InvokeToolWindowFactory"/>
<!--        <backgroundPostStartupActivity implementation="es.lnsd.invoke.InitActivity"/>-->
    </extensions>

</idea-plugin>